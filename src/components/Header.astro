import '../styles/global.css';
import Container from './Container.jsx';
---

<header class="py-4 lg:py-6">
  <Container>
    <nav class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center">
        <a
          href="/portfolio-v-2"
          class="text-2xl font-bold text-primary hover:text-secondary transition-colors"
        >
          telmo.dev
        </a>
      </div>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center space-x-8">
        <li><a href="/portfolio-v-2" class="nav-link">Home</a></li>
        <li><a href="/portfolio-v-2/projects" class="nav-link">Projects</a></li>
        <li>
          <a
            target="_blank"
            href="/portfolio-v-2/portfolio_resume.pdf"
            rel="noopener noreferrer"
            class="nav-link"
          >
