            aria-label="Close menu"
            id="mobile-menu-close"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Menu Content -->
        <div class="flex flex-col">
          <nav class="flex-1 px-4 py-8">
            <ul class="space-y-6">
              <li>
                <a
                  href="/portfolio-v-2"
                  class="block text-2xl font-medium text-gray-900 hover:text-primary transition-colors py-2"
                >
                  Home
                </a>
              </li>
              <li>
                <a
                  href="/portfolio-v-2/projects"
                  class="block text-2xl font-medium text-gray-900 hover:text-primary transition-colors py-2"
                >
                  Projects
                </a>
              </li>
              <li>
                <a
                  target="_blank"
                  href="/portfolio-v-2/portfolio_resume.pdf"
                  rel="noopener noreferrer"
                  class="block text-2xl font-medium text-gray-900 hover:text-primary transition-colors py-2"
                >
                  Resume
