---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.jsx';
---

<Layout>
  <main class="py-20">
    <Container>
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-12">
          <h1 class="text-4xl lg:text-5xl font-bold mb-6">Get In Touch</h1>
          <p class="text-xl text-gray-600 max-w-lg mx-auto">
            Have a question or want to work together? I'd love to hear from you.
          </p>
        </div>

        <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-8">
          <form class="space-y-6" noValidate>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div class="form-group">
                <label
                  for="name"
                  class="block text-sm font-medium text-gray-700 mb-2"
                >
                  Name *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg
                             focus:ring-2 focus:ring-primary focus:border-primary
                             transition-colors duration-200 bg-white text-gray-900
                             placeholder:text-gray-400"
                  placeholder="Your full name"
                />
              </div>

              <div class="form-group">
                <label
                  for="email"
                  class="block text-sm font-medium text-gray-700 mb-2"
                >
                  Email *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg
                             focus:ring-2 focus:ring-primary focus:border-primary
                             transition-colors duration-200 bg-white text-gray-900
                             placeholder:text-gray-400"
                  placeholder="your.email@example.com"
                />
              </div>
            </div>

            <div class="form-group">
              <label
                for="subject"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Subject *
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg
                           focus:ring-2 focus:ring-primary focus:border-primary
                           transition-colors duration-200 bg-white text-gray-900
                           placeholder:text-gray-400"
                placeholder="What's this about?"
              />
            </div>

            <div class="form-group">
              <label
                for="message"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Message *
              </label>
              <textarea
                id="message"
                name="message"
                rows={6}
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg
                           focus:ring-2 focus:ring-primary focus:border-primary
                           transition-colors duration-200 bg-white text-gray-900
                           placeholder:text-gray-400 resize-vertical"
                placeholder="Tell me more about your project or question..."
              ></textarea>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 pt-4">
              <button
                type="submit"
                class="flex-1 sm:flex-none bg-primary hover:bg-secondary
                           text-white font-medium py-3 px-8 rounded-lg transition-all duration-200
                           transform hover:scale-[1.02] focus:outline-none focus:ring-2
                           focus:ring-primary focus:ring-offset-2 shadow-lg"
              >
                Send Message
              </button>

              <button
                type="reset"
                class="flex-1 sm:flex-none bg-gray-100 hover:bg-gray-200 text-gray-900
                           font-medium py-3 px-8 rounded-lg transition-all duration-200
                           focus:outline-none focus:ring-2 focus:ring-gray-300 focus:ring-offset-2"
              >
                Clear Form
              </button>
            </div>
          </form>
        </div>

        <div class="mt-12 text-center">
          <p class="text-sm text-gray-600">
            You can also reach me directly at{' '}
            <a
              href="mailto:sorrabt@proton.me"
              class="text-primary hover:text-secondary transition-colors font-medium"
            >
              sorrabt@proton.me
            </a>
          </p>
        </div>
      </div>
    </Container>
  </main>
</Layout>
