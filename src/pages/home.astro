---
import Container from '../components/Container.jsx';

const introText =
  "With 6 years of full-stack engineering experience spanning two countries and five innovative companies, I've cultivated a unique blend of technical expertise and leadership vision. My journey has taken me from Portugal to Germany's vibrant tech capital, where I've had the privilege of working with industry leaders and emerging companies alike.";
---

<section class="hero-section py-20 lg:py-32">
  <Container>
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Text Content -->
      <div class="space-y-6 order-2 lg:order-1">
        <div class="space-y-4">
          <h1 class="text-4xl lg:text-6xl font-bold leading-tight">
            Hi, I'm <span class="text-primary">Telmo</span>
          </h1>
          <h2 class="text-xl lg:text-2xl text-gray-600 font-medium">
            Full-Stack Engineer
          </h2>
        </div>

        <p class="text-lg leading-relaxed text-gray-700 max-w-lg">
          {introText}
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="/projects"
            class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white font-medium rounded-lg hover:bg-secondary transition-colors"
          >
            View My Work
          </a>
          <!-- <a
            href="/contact"
            class="inline-flex items-center justify-center px-6 py-3 border-2 border-primary text-primary font-medium rounded-lg hover:bg-primary hover:text-white transition-colors"
          >
            Get In Touch
          </a> -->
        </div>
      </div>

      <!-- Image -->
      <div class="order-1 lg:order-2 flex justify-center lg:justify-end">
        <div class="relative">
          <img
            src="//portfolio_img.jpeg"
            alt="Telmo - Full-Stack Engineer"
            class="w-80 h-80 lg:w-96 lg:h-96 object-cover rounded-2xl shadow-2xl"
          />
          <div
            class="absolute -bottom-4 -right-4 w-20 h-20 bg-highlight rounded-xl opacity-90"
          >
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
